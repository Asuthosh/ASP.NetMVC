@using PagedList;
@using PagedList.Mvc;
@model IPagedList<WebApp_Album.Models.Photo>

@{
    ViewBag.Title = "Index";
}
<head>
    <style>
        div.a {
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

            div.a:hover {
                overflow: visible;
            }
    </style>
</head>

@using (Html.BeginForm("Index", "Photos", FormMethod.Get))
{
    <div class="page">
        <div class="row" style="border-bottom:double">
            <div class="col-sm-12">
                <h2 class="caption" style="color:brown">Album Thumbnails</h2>
            </div>
        </div>
        <br />
        <div class="container-fluid" style="background-color:seashell; ">
            <div class="row">
                @foreach (var item in Model)
                {
                    @Html.Partial("_Thumbnails", item)
                }
            </div>
            <br />

        </div>
    </div>
}

@Html.PagedListPager(Model, pageNumber => Url.Action("Index", new
{
    pageNumber
}))
